---
layout: layout/base
---

{% include 'components/header' %}
<main id="site-main">
    {{ content }}
</main>
<nav id="site-mobile-menu" amp-fx="float-in-bottom">
    {% for item in site.menu %}
    <div class="site-mobile-menu-items">
        <a href="{{ item.url }}" class="{% if item.url == page.url %}active{% endif %}" title="{{ item.title }}">{{ item.icon }}</a>
        <p>{{ item.title }}</p>
    </div>
    {% endfor %}
</nav>
{% include 'components/install-sw' %}
{% include 'components/footer' %}